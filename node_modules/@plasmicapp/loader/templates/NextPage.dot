import { useRouter } from "next/router";
import PlasmicLoader from "@plasmicapp/loader";

const componentsByPath = {
  {{~ it.pages :page}}
    "{{=page.url}}": {name: "{{=page.name}}", projectId: "{{=page.projectId}}" },
  {{~}}
};

export default function PlasmicLoaderPage() {
  const router = useRouter();
  const { plasmicLoaderPage } = router.query;
  const {name, projectId} = componentsByPath[plasmicLoaderPage];

  return <PlasmicLoader component={name} projectId={projectId} />;
}

export async function getStaticProps(context) {
  return {
    props: {},
  };
}

export async function getStaticPaths() {
  return {
    paths: [
      {{~ it.pages :page}}
        { params: { plasmicLoaderPage: ["{{=page.url}}"] } },
      {{~}}
    ],
    fallback: false,
  };
}
